{
  "name": "@m.dev/imagnify",
  "description": "Imagnify is a simple and lightweight library to add zoom functionality to images.",
  "version": "1.0.0",
  "author": {
    "name": "Carlos Medina",
    "email": "hola@medina.dev",
    "url": "https://medina.dev"
  },
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/medinnna/imagnify.git"
  },
  "keywords": [
    "zoom",
    "popup",
    "preview",
    "lightbox",
    "picture",
    "image"
  ],
  "type": "module",
  "main": "./dist/imagnify.min.js",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/imagnify.js"
    },
    "./core": {
      "default": "./dist/imagnify.core.min.js",
      "import": "./dist/esm/index.core.js",
      "require": "./dist/imagnify.core.js"
    },
    "./style": {
      "default": "./dist/imagnify.min.css",
      "import": "./dist/imagnify.css",
      "require": "./dist/imagnify.css"
    }
  },
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c",
    "format": "prettier . --write"
  },
  "packageManager": "pnpm@10.7.0",
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@rollup/plugin-terser": "^0.4.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.1.0",
    "prettier": "3.5.3",
    "rollup": "^4.41.0",
    "rollup-plugin-import-css": "^3.5.8",
    "rollup-plugin-postcss": "^4.0.2"
  },
  "files": [
    "dist",
    "hero.png"
  ]
}
